@* using'i heryerde kullanmamamk için _ViewImports.cshtml içerisine ekle *@
@* @using MeetingApp.Models *@
@model MeetingInfo;
@{
	ViewBag.Title = "Toplantı Başvuru";
	Layout = "_LayoutHomeIndex"; 
}
<main class="text-center">
<h1 class="h4">@ViewData["Selamlama"]</h1>
<p>Toplantı Katılım Durumunuzu Bildirin.</p>
<div class="card my-2">
	<ul class="list-group list-group-flush">
		<li class="list-group-item">@Model.Location</li>
		<li class="list-group-item">@Model.Date.ToString() tarihinde gerçekleşecektir.</li>
		<li class="list-group-item">@Model.NumberOfPeople Katılımcı</li>
	</ul>
</div>
<a
  class="btn btn-sm btn-outline-primary"
  asp-controller="Meeting"
  asp-action="Apply">Başvuru Yap
</a>
</main>
